<Window x:Class="Consultorio.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConsultÃ³rio - Gerenciador de Pacientes" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen" 
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="CONSULTÃ“RIO" FontSize="24" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="Gerenciador de Pacientes" FontSize="14" Foreground="#E3F2FD" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de Pacientes -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Pacientes Cadastrados" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="ðŸ”„ Recarregar" Command="{Binding LoadPatientsCommand}" 
                        Padding="10,8" Background="#4CAF50" Foreground="White" 
                        FontWeight="Bold" Margin="0,0,0,10" Cursor="Hand"/>
                
                <ListBox ItemsSource="{Binding Patients}" 
                         SelectedItem="{Binding SelectedPatient}"
                         BorderBrush="#DDD" BorderThickness="1" 
                         Height="400" VerticalAlignment="Top">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Email}" Foreground="#666" FontSize="12" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- FormulÃ¡rio -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="FormulÃ¡rio" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <TextBlock Text="Nome" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,10"/>

                <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PatientEmail, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,15"/>

                <!-- BotÃµes -->
                <StackPanel Orientation="Vertical">
                    <Button Content="âœš Criar Paciente" Command="{Binding CreatePatientCommand}"
                            Padding="10,8" Background="#4CAF50" Foreground="White" FontWeight="Bold" Cursor="Hand" Margin="0,0,0,8"/>
                    
                    <Button Content="âœŽ Atualizar" Command="{Binding UpdatePatientCommand}"
                            Padding="10,8" Background="#FFC107" Foreground="Black" FontWeight="Bold" Cursor="Hand" Margin="0,0,0,8"/>
                    
                    <Button Content="ðŸ—‘ Remover" Command="{Binding DeletePatientCommand}"
                            Padding="10,8" Background="#F44336" Foreground="White" FontWeight="Bold" Cursor="Hand" Margin="0,0,0,8"/>
                    
                    <Button Content="âœ• Limpar" Command="{Binding ClearFormCommand}"
                            Padding="10,8" Background="#999" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                             Width="20" Height="20" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="#333"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>